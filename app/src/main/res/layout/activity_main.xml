<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_display_2_material" />

    <Button
        android:id="@+id/clarifaiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clarifai"
        android:layout_above="@+id/camFindButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/camFindButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camFind"
        android:layout_above="@+id/cloudVisionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/cloudVisionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clouldVision"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
